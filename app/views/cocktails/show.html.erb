<div class="cocktail-wrapper">
  <div class="cocktail-image">
    <%= cl_image_tag @cocktail.photo, height: 500, width: 500, crop: :fill %>
  </div>
  <div class="cocktail-container">
    <div class="cocktail-container-content">
      <h1><%= @cocktail.name %></h1>

        <% @cocktail.doses.each do |dose| %>
         <p><%= dose.ingredient.name %>: <%= dose.description %></p>
        <% end %>

      <div class="buttons">
      <%= link_to "Back to cocktails", cocktails_path, class: "btn-link" %>  <%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail), class: "btn-link" %>
      </div>
    </div>
  </div>
</div>



