<div class="container">
  <div class="row">
    <div class="col-sm-4 offset-sm-4">
      <h1><%= @cocktail.name %></h1>
      <ul>
        <% @cocktail.doses.each do |dose| %>
         <li><%= dose.ingredient.name %>: <%= dose.description %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>


<%= link_to "Back to cocktails", cocktails_path %>  <%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %>

