<div class="container">
  <h1>Find your perfect drink</h1>
  <div class="row">
  <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <!-- insert <div class="card"> -->
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.1)),
           url('<%= cl_image_path cocktail.photo %>')">
            <div class="card-description">
              <h2><%= cocktail.name %></h2>
            </div>
          </div>
    </div>
        <% end %>
      <% end %>

  </div>
</div>

